<body>

  <div class="navbar-chica">
    <div class="logo">
      <img src="http://res.cloudinary.com/dydwtoubz/image/upload/v1550330776/Chica Coktails/mosaic-cocktails.jpg" alt="">
      <h3>Chica Cocktails</h3>
    </div>
    <div class="new-cocktail">
      <i class="fas fa-plus"></i>
      <p><%= link_to "New cocktail", new_cocktail_path %></p>
    </div>
  </div>

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dydwtoubz/image/upload/v1550242925/cj6ntnbniqzqhjqmeldu.jpg)">
    <div class="banner-content">
      <h1>Chica <strong>Cocktails</strong></h1>
    </div>
  </div>

  <div class="wrapper" style="background-image: url(https://res.cloudinary.com/dydwtoubz/image/upload/v1550327680/Chica%20Coktails/pexels-photo-842955.jpg)">
    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dydwtoubz/image/upload/v1550242925/cj6ntnbniqzqhjqmeldu.jpg)">
          <div class="card-description"><%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      This footer is made with <i class="fas fa-heart"></i> at Le Wagon
    </div>
  </div>

</body>

